break;
case (02):
cout << "Вартiсть товару = 2 \n";
cout << "Кiлькiсть товару = 11 \n";
break;
case (03):
cout << "Вартiсть товару = 3 \n";
cout << "Кiлькiсть товару = 12 \n";
break;
case (04):
cout << "Вартiсть товару = 4 \n";
cout << "Кiлькiсть товару = 13 \n";
break;
case (05):
cout << "Вартiсть товару = 5 \n";
cout << "Кiлькiсть товару = 14 \n";
break;
case (06):
cout << "Вартiсть товару = 6 \n";
cout << "Кiлькiсть товару = 15 \n";
